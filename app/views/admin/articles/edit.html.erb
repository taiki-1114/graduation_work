<h1>質問編集</h1>
<div class="card">
  <div class="card-header">
  質問詳細
  </div>
  <div class="card-body">
    <h5 class="card-title">石綿産廃に関する質問詳細</h5>
    <%= form_with model: @article , url: admin_article_path(@article), local: true do |f| %>
      <% if @article.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
            <% @article.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= f.label :"質問タイトル", style: "display: block" %>
        <%= f.text_field :title %>
      </div>

      <div>
        <%= f.label :"質問内容", style: "display: block" %>
        <%= f.text_area :question_body %>
      </div>
      <div>
        <%= f.label :"質問回答", style: "display: block" %>
        <%= f.text_area :question_answer %>
      </div>
      <div>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <br>

  <div class="card-footer">
      <%= link_to "詳細画面へ", @article, class: "btn btn-primary" %>
      <%= link_to "一覧画面へ", admin_articles_path, class: "btn btn-primary" %>
  </div>
</div>
